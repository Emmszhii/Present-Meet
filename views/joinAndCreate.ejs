<%- include('partials/header') %>

<!-- Main -->
<div class="homepageMain">
  <div class="text">
    <h2>
      80 Percent of Success is Showing Up. <br />
      Attend Today, Achieve Tomorrow.
    </h2>
    <span
      >We develope a secure and fast service to <br />
      ensure meetings and attendance is available and free for all.</span
    >

    <div class="buttons space">
      <button class="button btnJoin" id="btnJoinModal">Join</button>
      <button class="button btnCreateRoom" id="btnCreateModal">Create Room</button>
    </div>

    <hr width="500px" />

    <div class="homepageFooter">
      <!-- <p class="text1">Learn more</p>
      <p class="text2">About</p> -->
      <form action="/logout">
        <button class="button logout" type="submit">Logout</button>
      </form>
    </div>
  </div>
  <div class="homepageImg">
    <img src="img/2.png" alt="onCall" />
  </div>
</div>

<!-- MODALS -->
<!-- Meeting Joining -->
  <div id="join-screen">
    <div class="modalJoin-bg closeBg">
      <div class="joinModal">
        <h3>Join a meeting</h3>
        <span>Enter a meeting code provided by the meeting organizer</span>
        <form action="#" method="post">
          <input
            class="input"
            type="text"
            name="meetingLink"
            id="txtMeetingCode"
            placeholder="Enter Meeting Code..."
            autocomplete="off"
            required
          />
        <div class="buttons">
          <button class="button" type="submit">
            Join
          </button>
        </form>
        <span class="modalJoin-close">X</span>
      </div>
    </div>
  </div>

  <!-- Create Meeting -->
  <div class="modalCreate-bg closeBg">
    <div class="createModal">
      <h3>Create a Meeting</h3>
      <span>Here's the link to your meeting</span>
      <form action='/room'>
        <input class="input" type="text" name="meetingId" id="link" autocomplete="off"/>
        <button onclick="copyClipboard()" class="icon" type="button"><i class="fa-solid fa-copy"></i></button>
        <div class="buttons">
          <button class="button" type="submit" >
            Enter Room
          </button>
      </form>
          <span class="modalCreate-close">X</span>
      </div>
    </div>
  </div>
</div>

<script defer src="javascript/script.js"></script>
<%- include('partials/footer') %>
