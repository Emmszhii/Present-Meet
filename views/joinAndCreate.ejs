<!-- MODALS -->
<!-- Meeting Joining -->
  <div id="join-screen">
    <div class="modalJoin-bg closeBg">
      <div class="joinModal">
        <h3>Join a meeting</h3>
        <span>Enter a meeting code provided by the meeting organizer</span>
        <form action="/room" method="get">
          <!-- <div class="checkBoxes">
            <label class="container" >Video
              <input name="video" type="checkbox" id="videoCheckbox1" value='false'>
              <span span class="checkmark"></span>
            </label>
            <label class="container" >Mic
              <input name="audio" type="checkbox" id="micCheckbox1" value="false">
              <span class="checkmark"></span>
            </label>
          </div> -->
        
          <input
            class="input"
            type="text"
            name="meetingId"
            id="txtMeetingCode"
            placeholder="Enter Meeting Code..."
            autocomplete="off"
            required
          />
          <div class="buttons">
            <button class="button" type="submit">
            Join
          </button>
        </form>
        <span class="modalJoin-close">X</span>
      </div>
    </div>
  </div>

  <!-- Create Meeting -->
  <div class="modalCreate-bg closeBg">
    <div class="createModal">
      <h3>Create a Meeting</h3>
      <span>Here's the link to your meeting</span>
      <form action='/room' method="get">
        <!-- <div class="checkBoxes">
          <label class="container" >Video
            <input name="video" type="checkbox" id="videoCheckbox2" value="false">
            <span span class="checkmark"></span>
          </label>
          <label class="container" >Mic
            <input name="audio" type="checkbox" id="micCheckbox2" value="false">
            <span class="checkmark"></span>
          </label>
        </div> -->
        
        <input class="input" type="text" name="meetingId" id="link" autocomplete="off" readonly/>
        <button onclick="copyClipboard()" class="icon" type="button"><i class="fa-solid fa-copy"></i></button>
        <div class="buttons">
          <button class="button" type="submit">
            Enter Room
          </button>
      </form>
        <span class="modalCreate-close">X</span>
      </div>
    </div>
  

